case class @@model@@ (
  @@baseFields@@
) extends MaidenModel {

  def save() = id match {
    case Some(i) if i != -1l => {
      if (@@model@@.exists(i)) {
        @@model@@.update(this)
      } else {
        @@model@@.create(this)
      }
    }
    case _ => @@model@@.create(this)
  }

  def delete() = id match {
    case Some(i) => @@model@@.deleteById(i)
    case _ => -1l
  }

  def format() = @@model@@(@@formattedCols@@)

}

object @@model@@ extends MaidenModelObject[@@model@@, @@model@@FullResponse] {

  def exists(id: Long) = {
    val q = quote {
      @@queryName@@.filter(_.id == lift(id))
    }

    db.run(q.size) match {
      case x: Long if x > 0 => true
      case _ => false
    }
  }

  def get(id: Long) =
    findBy("id", id).headOption match {
      case Some(x) => x
      case _ => throw new EntityNotFoundException
    }

  @@magicMethods@@

  @@referenceMethods@@

